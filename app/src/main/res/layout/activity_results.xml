<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ResultsActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textViewRules2"
        android:layout_width="357dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:lines="26"
        android:singleLine="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Memory Game Best Times"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="27dp"
        android:text="Level 1"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeader" />

    <TextView
        android:id="@+id/textViewResLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:text="59:59"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLevel1"
        app:layout_constraintEnd_toEndOf="@+id/textViewHeader"
        app:layout_constraintTop_toTopOf="@+id/textViewLevel1" />

    <TextView
        android:id="@+id/textViewLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Level 2"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewLevel1"
        app:layout_constraintStart_toStartOf="@+id/textViewLevel1"
        app:layout_constraintTop_toBottomOf="@+id/textViewLevel1" />

    <TextView
        android:id="@+id/textViewResLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="59:59"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLevel2"
        app:layout_constraintEnd_toEndOf="@+id/textViewResLevel1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewResLevel1"
        app:layout_constraintTop_toTopOf="@+id/textViewLevel2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewLevel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Level 3"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewLevel2"
        app:layout_constraintStart_toStartOf="@+id/textViewLevel2"
        app:layout_constraintTop_toBottomOf="@+id/textViewLevel2" />

    <TextView
        android:id="@+id/textViewResLevel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="59:59"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLevel3"
        app:layout_constraintEnd_toEndOf="@+id/textViewResLevel1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewResLevel1"
        app:layout_constraintTop_toTopOf="@+id/textViewLevel3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonPlay2"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:layout_marginBottom="32dp"
        android:onClick="onBackClick"
        android:tag="0"
        android:text="Main Menu"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>