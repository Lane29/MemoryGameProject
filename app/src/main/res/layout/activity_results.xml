<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/resultsBackground"
    tools:context=".ResultsActivity"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Best Score"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:text="GAME 1"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeader" />

    <TextView
        android:id="@+id/textViewGame1Level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:text="Level 1"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textGame1"
        app:layout_constraintTop_toBottomOf="@+id/textGame1" />

    <TextView
        android:id="@+id/textViewResGame1Level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGame1Level1"
        app:layout_constraintEnd_toEndOf="@+id/textViewHeader"
        app:layout_constraintTop_toTopOf="@+id/textViewGame1Level1" />

    <TextView
        android:id="@+id/textViewGame1Level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Level 2"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewGame1Level1"
        app:layout_constraintTop_toBottomOf="@+id/textViewGame1Level1" />

    <TextView
        android:id="@+id/textViewResGame1Level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewResGame1Level1"
        app:layout_constraintTop_toBottomOf="@+id/textViewResGame1Level1" />

    <TextView
        android:id="@+id/textViewGame1Level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Level 3"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewGame1Level2"
        app:layout_constraintTop_toBottomOf="@+id/textViewGame1Level2" />

    <TextView
        android:id="@+id/textViewResGame1Level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewResGame1Level2"
        app:layout_constraintTop_toBottomOf="@+id/textViewResGame1Level2" />


    <TextView
        android:id="@+id/textGame2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="71dp"
        android:text="GAME 2"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGame1Level3" />

    <TextView
        android:id="@+id/textViewGame2Level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="11dp"
        android:text="Level 1"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textGame2"
        app:layout_constraintTop_toBottomOf="@+id/textGame2" />

    <TextView
        android:id="@+id/textViewResGame2Level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewResGame2Level3"
        app:layout_constraintStart_toStartOf="@+id/textViewResGame2Level3" />

    <TextView
        android:id="@+id/textViewGame2Level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Level 2"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewGame2Level1"
        app:layout_constraintTop_toBottomOf="@+id/textViewGame2Level1" />

    <TextView
        android:id="@+id/textViewResGame2Level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewResGame2Level1"
        app:layout_constraintTop_toBottomOf="@+id/textViewResGame2Level1" />

    <TextView
        android:id="@+id/textViewGame2Level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Level 3"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewGame2Level2"
        app:layout_constraintTop_toBottomOf="@+id/textViewGame2Level2" />

    <TextView
        android:id="@+id/textViewResGame2Level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlay2"
        app:layout_constraintEnd_toEndOf="@+id/buttonPlay2" />

    <Button
        android:id="@+id/buttonPlay2"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:layout_marginBottom="21dp"
        android:onClick="onMenuClick"
        android:tag="0"
        android:text="Main Menu"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>